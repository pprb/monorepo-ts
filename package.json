{
  "name": "monorepo-ts",
  "private": true,
  "scripts": {
    "compile": "tsc -b",
    "compile:all": "tsc -b -i",
    "compile:clean": "tsc -b --clean",
    "compile:watch": "tsc -b -w -i",
    "start:1": "node bin/core1/src/index.js",
    "start:2": "node bin/core2/src/index.js",
    "start:ts": "node -r ts-node/register/transpile-only packages/core1/src/index.ts"
  },
  "dependencies": {
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "workspaces": [
    "packages/*"
  ]
}
